        app:layout_constraintEnd_toStartOf="@+id/img_trogiupcall"
        app:layout_constraintStart_toEndOf="@+id/img_rollback"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/trogiup5050" />

    <ImageView
        android:id="@+id/img_trogiupcall"

        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/img_tuvan"
        app:layout_constraintStart_toEndOf="@+id/img_5050"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:onClick="tro_giup_goi_dien_thoai"
        app:srcCompat="@drawable/trogiupcall" />

    <ImageView
        android:id="@+id/img_tuvan"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
